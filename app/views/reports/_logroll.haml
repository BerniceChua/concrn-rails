%li.list-group-item
  %h4.list-group-item-heading
    .row
      .col-sm-12
        %span{style: 'float:left;'}
          Transcript
          = ' with ' unless @report.unassigned?
        %span.text-right{style: 'float:right;'}= "#{@report.responders.map { |i| i.name + ' @ ' + i.phone }.join('<br>') }".html_safe
  - @report.logs.each_with_index do |log, i|
    %div{class: "row log-entry#{' dark' if i.odd?}"}
      .col-md-1= log.created_at.strftime('%H:%M')
      .col-md-1= log.author.name
      .col-md-6= log.body
      - unless @report.unassigned? || log.broadcasted?
        .col-md-3.forward-via-sms=link_to "Send SMS", log_path(log), method: 'PUT'
      - if log.broadcasted?
        .col-md-3.sent-stamp= "Sent (#{log.updated_at.strftime('%H:%M')})"

%li.list-group-item.metaphone
  = simple_form_for @metaphone do |f|
    .row
      .col-md-12= f.input :body, as: :string, label: false, placeholder: 'Enter details...'
      = f.input :author_id, as: :hidden, input_html: { value: current_user.id }
      = f.input :report_id, as: :hidden, input_html: { value: @report.id }
