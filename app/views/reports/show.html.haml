%h2
  = @report.neighborhood ? "Crisis in #{@report.neighborhood}" : "Reported"
  %small="#{time_ago_in_words(@report.created_at)} ago:"

.row
  %ul.list-group.col-md-4
    %li.list-group-item
      .btn-archive.list-group-item-text.pull-right= link_to 'Archive', report_path(@report, report: {status: 'archived'}), confirm: 'Are you sure you want to archive the report?', method: :put, class: 'btn btn-warning' unless @report.archived_or_completed?
      .btn-complete.list-group-item-text.pull-right= link_to 'Complete', report_path(@report, report: {status: 'completed'}), confirm: 'Are you sure you want to complete the report?', method: :put, class: 'btn btn-success' unless @report.archived_or_completed?

      %h4.list-group-item-heading Status
      .list-group-item-text= @report.current_status.capitalize

    %li.list-group-item
      %h4.list-group-item-heading Observations
      .list-group-item-text=@report.observations.join(', ')

    %li.list-group-item
      %h4.list-group-item-heading Reported at
      .list-group-item-text=@report.created_at

    %li.list-group-item
      %h4.list-group-item-heading Reporting Party
      .list-group-item-text=@report.name
      .list-group-item-text=@report.phone

    %li.list-group-item
      %h4.list-group-item-heading Address
      .list-group-item-text=@report.address

    %li.list-group-item
      %h4.list-group-item-heading Client
      .list-group-item-text="#{@report.age} #{@report.race} #{@report.gender}"
      .list-group-item-text=@report.nature.present? ? "#{@report.nature}" : 'Nature Not Provided'

    %li.list-group-item
      %h4.list-group-item-heading Files
      - if @report.image.present?
        .list-group-item-text= link_to "Download #{@report.image_file_name}", download_report_path(@report)
        %br
        .list-group-item-text= link_to "Remove File", report_path(@report, "report[delete_image]" => '1'), method: :put
        %small Can only have 1 file per report
      - else
        .list-group-item-text
          = simple_form_for @report do |f|
            = f.input_field :image
            %br
            = f.button :submit, 'Add File'

  %ul.list.group.col-md-8= render partial: "reports/logroll"

= link_to 'Delete', report_path(@report), method: :delete,
  confirm: 'Are you sure you want to delete the report?', class: 'btn btn-danger'
