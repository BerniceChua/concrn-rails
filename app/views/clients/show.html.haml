.row
  .col-md-5
    %h1.name= "#{@client.name}"
  .col-md-5.col-md-offset-2
    %br
    - if !@client.active
      %strong Inactive

    .gender= @client.gender
    .age= @client.age
    .race= @client.race
%h3 Reports
= render "reports/report_table", reports: @client.reports, responders: @available_responders
.row
  %br
  - status = @client.active ? 'Deactivate' : 'Reactivate'
  .col-sm-2= link_to "#{status}", client_path(@client, client: {active: !@client.active}), method: :put, class: 'btn btn-warning'
  .col-sm-2= link_to 'Edit', edit_client_path(@client), class: 'btn btn-default'

