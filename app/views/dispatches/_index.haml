%dl
  - non_rejected_dispatches = report.dispatches.not_rejected.joins(:responder)
  - if non_rejected_dispatches.present?
    %dt Responders
    - non_rejected_dispatches.each do |dispatch|
      %dd
        = link_to dispatch.responder.name, responder_path(dispatch.responder)
        = '(Pending)' if dispatch.pending?
    %dl
      %dt Dispatched
      %dd= time_ago_in_words(report.dispatches.order('created_at DESC').last.created_at)
